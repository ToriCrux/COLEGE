@page
@model LojaDeMangas.Pages.Usuarios.CreateModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Cadastrar Usuário";
}

<head>
    <link rel="icon" type="image/x-icon" href="/imagens/favicon.ico" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Nunito&display=swap">
    <style>
        .form-columns {
            display: flex;
            justify-content: space-between;
        }

        .column {
            flex: 1;
            margin-right: 20px;
        }

        .centered {
            display: block;
            margin-left: auto;
            margin-right: auto;
        }

        h2 {
            color: #333;
            text-align: center;
            margin-bottom: 25px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            display: block;
            margin-bottom: 5px;
        }

        .form-control {
            width: 100%;
            margin-bottom: 10px;
        }

        .input-largura-40 {
            width: 100%;
        }

        .btn-primary {
            width: 100%;
            margin-top: 10px;
            color: #000;
            border-radius: 10px;
            border-color: #65A1F6;
            background-color: #65A1F6;
        }

            .btn-primary:hover,
            .btn-primary:focus {
                background-color: #1872F2;
                border-color: #1872F2;
            }

        .btn-secondary {
            width: 100%;
            margin-top: 10px;
            color: #000;
            border-radius: 10px;
            border-color: #808F87;
            background-color: #808F87;
        }

            .btn-secondary:hover,
            .btn-secondary:focus {
                background-color: #962233;
                border-color: #962233;
            }

        .footer {
            position: fixed;
            margin-top: 45px;
            bottom: 0;
            width: 100%;
            white-space: nowrap;
            line-height: 60px;
            text-align: center;
        }
    </style>
</head>

<body>

    <h2>Registro de Usuário</h2>

    <form method="post">
        <div asp-validation-summary="All"></div>

        <div class="form-group">
            <label asp-for="Usuario.UserName"></label>
            <input asp-for="Usuario.UserName" class="form-control input-largura-40" />
            <span asp-validation-for="Usuario.UserName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Usuario.Password"></label>
            <input type="password" asp-for="Usuario.Password" id="password" class="form-control input-largura-40" />
            <span asp-validation-for="Usuario.Password" class="text-danger"></span>
        </div>


        <br />

        <button type="submit" class="btn btn-primary btn-lg btn-block">Salvar</button>
        <a asp-page="./Index" class="btn btn-secondary btn-lg btn-block">Cancelar</a>
    </form>

</body>
