@page
@model LojaDeMangas.Pages.Mangas.CreateModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Cadastrar Mangá";
}

<head>
    <link rel="icon" type="image/x-icon" href="/imagens/favicon.ico" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Nunito&display=swap">
    <style>
        .form-columns {
            display: flex;
            justify-content: space-between;
        }

        .column {
            flex: 1;
            margin-right: 20px;
        }

        .centered {
            display: block;
            margin-left: auto;
            margin-right: auto;
        }

        h2 {
            color: #333;
            text-align: center;
            margin-bottom: 25px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            display: block;
            margin-bottom: 5px;
        }

        .form-control {
            width: 100%;
            margin-bottom: 10px;
        }

        .input-largura-40 {
            width: 100%;
        }

        .btn-primary {
            width: 100%;
            margin-top: 10px;
            color: #000;
            border-radius: 10px;
            border-color: #65A1F6;
            background-color: #65A1F6;
        }

            .btn-primary:hover,
            .btn-primary:focus {
                background-color: #1872F2;
                border-color: #1872F2;
            }

        .btn-secondary {
            width: 100%;
            margin-top: 10px;
            color: #000;
            border-radius: 10px;
            border-color: #808F87;
            background-color: #808F87;
        }

            .btn-secondary:hover,
            .btn-secondary:focus {
                background-color: #962233;
                border-color: #962233;
            }

        .footer {
            position: relative;
            margin-top: 45px;
            bottom: 0;
            width: 100%;
            white-space: nowrap;
            line-height: 60px;
            text-align: center;
        }
    </style>
</head>

<body>
    <h2 class="centered">Cadastrar Novos Mangás</h2>

    <form method="post" class="centered">

        <div class="form-columns">
            <div class="column">

                <div class="form-group">
                    <label asp-for="Manga.Titulo">Título do Mangá</label>
                    <input asp-for="Manga.Titulo" class="form-control input-largura-40" />
                    <span asp-validation-for="Manga.Titulo" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Manga.Edicao">Edição do Mangá</label>
                    <input asp-for="Manga.Edicao" class="form-control input-largura-40" />
                    <span asp-validation-for="Manga.Edicao" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Manga.Valor">Valor do Mangá (R$)</label>
                    <input asp-for="Manga.Valor" class="form-control input-largura-40" oninput="validarValor(this)" />
                    <span asp-validation-for="Manga.Valor" class="text-danger"></span>
                </div>
            </div>

            <div class="column">

                <div class="form-group">
                    <label asp-for="Manga.Editora">Editora do Mangá</label>
                    <input asp-for="Manga.Editora" class="form-control input-largura-40" />
                    <span asp-validation-for="Manga.Editora" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Manga.AnoPublicacao">Ano de Publicação do Mangá</label>
                    <input asp-for="Manga.AnoPublicacao" class="form-control input-largura-40" oninput="validarNumero(this)" />
                    <span asp-validation-for="Manga.AnoPublicacao" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label for="Autores">Autor(es) do Mangá</label>
            <select asp-for="AutoresSelecionados" class="form-control input-largura-40" multiple>
                @foreach (var autor in Model.Autores)
                {
                    <option value="@autor.Value">@autor.Text</option>
                }
            </select>
            <span class="text-danger" id="autoresValidation"></span>
        </div>

        <div class="form-group">
            <label for="Assuntos">Gênero(s) do Mangá</label>
            <select asp-for="Manga.CodAs" class="form-control input-largura-40">
                @foreach (var assunto in Model.Assuntos)
                {
                    <option value="@assunto.Value">@assunto.Text</option>
                }
            </select>
        </div>

        <button type="submit" class="btn btn-primary btn-lg btn-block">Salvar</button>
        <a asp-page="./Index" class="btn btn-secondary btn-lg btn-block">Cancelar</a>

    </form>

</body>
