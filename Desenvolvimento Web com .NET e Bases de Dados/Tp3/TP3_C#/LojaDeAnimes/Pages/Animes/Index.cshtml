@page
@model LojaManga.Pages.Livros.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Listagem Mangá";
}

<head>
    <link rel="icon" type="image/x-icon" href="/imagens/favicon.ico" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Nunito&display=swap">
    <style>
        .centered {
            display: block;
            margin-left: auto;
            margin-right: auto;
            text-align: center;
        }

        .btn-primary {
            margin-left: 5px;
            margin-right: 5px;
            margin-top: 10px;
            color: #000;
            border-radius: 10px;
            border-color: #808F87;
            background-color: #808F87;
            
        }

        .btn-primary:hover,
        .btn-primary:focus {
                background-color: #606C66;
                border-color: #808F87;
        }

        .btn-info{
            color: #000;
            border-radius: 10px;
            border-color: #65A1F6;
            background-color: #65A1F6;
        }

            .btn-info:hover,
            .btn-info:focus {
                color: #fff;
                background-color: #1872F2;
                border-color: #1872F2;
        }

        .btn-success{
            color: #000;
            border-radius: 10px;
            border-color: #309C7C;
            background-color: #309C7C;
        }

            .btn-success:hover,
            .btn-success:focus {
                background-color: #226D57;
                border-color: #226D57;
        }

        .btn-danger{
            color: #000;
            border-radius: 10px;
            border-color: #B72A3F;
            background-color: #B72A3F;
        }

            .btn-danger:hover,
            .btn-danger:focus {
                background-color: #962233;
                border-color: #962233;
        }


        .footer {
            position:fixed;
            bottom: 0;
            width: 100%;
            white-space: nowrap;
            line-height: 60px;
            text-align: center;
        }
    </style>
</head>

<body>
    <h2 class="centered">Listagem Mangás</h2>

    <p>
        <a asp-page="Create" class="btn btn-primary">Adicionar Novo Mangá</a>
    </p>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Título</th>
                <th>Edição</th>
                <th>Valor do Mangá</th>
                <th>Editora</th>
                <th>Ano de Publicação</th>
                <th>Autor(es)</th>
                <th>Gênero(s)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var anime in Model.Mangas)
            {
                <tr>
                    <td>@anime.Titulo</td>
                    <td>@anime.Edicao</td>
                    <td>@anime.Valor</td>
                    <td>@anime.Editora</td>
                    <td>@anime.AnoPublicacao</td>
                    <td>
                        @foreach (var autor in anime.Autores)
                        {
                            <span>@autor.Autor.Nome</span><br />
                        }
                    </td>
                    <td>@anime.Assunto.Descricao</td>
                    <td>
                        <a asp-page="Detail" asp-route-id="@anime.Codl" class="btn btn-info btn-rounded">Detalhe</a> |
                        <a asp-page="Edit" asp-route-id="@anime.Codl" class="btn btn-success btn-rounded">Editar</a> |
                        <a asp-page="Delete" asp-route-id="@anime.Codl" class="btn btn-danger btn-rounded">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>